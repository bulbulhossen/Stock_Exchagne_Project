<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#217388"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Home_page.Reset">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:background="#17515D"
        android:padding="20dp"

        android:text="Share Market User Prtfolio"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />


    <me.james.biuedittext.BiuEditText
        android:id="@+id/view"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="39dp"
        android:background="@drawable/edittext_bottom_bg"
        android:drawableLeft="@drawable/email"
        android:hint="Enter email address/Phone here"
        android:inputType="textVisiblePassword"
        android:padding="15dp"
        android:textColor="#000"
        android:textColorHint="#bbbbbb"
        app:biu_duration="800"
        app:biu_text_color="#217081"
        app:biu_text_scale="1.5"
        app:biu_text_start_size="12sp"
        app:biu_type="flyup" />


    <me.james.biuedittext.BiuEditText
        android:id="@+id/view2"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_below="@+id/view"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:background="@drawable/edittext_bottom_bg"
        android:drawableLeft="@drawable/password"
        android:hint="Enter Password"
        android:inputType="textVisiblePassword"
        android:padding="15dp"
        android:password="true"
        android:textColor="#000"
        android:textColorHint="#bbbbbb"
        app:biu_duration="800"
        app:biu_text_color="#217081"
        app:biu_text_scale="1.5"
        app:biu_text_start_size="12sp"
        app:biu_type="flyup" />

    <TextView
        android:id="@+id/mainlogin_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#63BACE"
        android:gravity="center"
        android:padding="10dp"
        android:text="Log In"
        android:textAlignment="center"
        android:textColor="#111"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:text="@string/forget"
        android:textSize="16sp"
        android:layout_below="@+id/mainlogin_screen"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="@string/signup_ud"
        android:textSize="16sp"
        android:layout_below="@+id/forgetpassword"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:autoLink="web"
            android:background="#86B2BB"
            android:padding="10dp"
            android:text="Stock Market User Portfolio.@ 2015 All Reserved"
            android:textAlignment="center"
            android:textColor="#1B1B1B"
            android:textSize="8sp"
            android:textStyle="normal" />


    </LinearLayout>


</RelativeLayout>
